<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.xem_tt_truyen">
    <androidx.cardview.widget.CardView
        android:id="@+id/layout_xemtt_hinhtruyen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="20dp"
        >
        <ImageView
            android:id="@+id/iv_xemtt_hinhtruyen"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:src="@drawable/img"
            android:scaleType="fitXY"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_xemtt_hinhtruyen"
        app:layout_constraintBottom_toBottomOf="@id/layout_xemtt_hinhtruyen"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:orientation="vertical"
      >
        <TextView
            android:id="@+id/tv_xemtt_tentruyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="tenApp"
            android:fontFamily="@font/donglebold"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_xemtt_tentacgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/donglebold"
            android:text="tenApp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/tv_xemtt_theloai"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/donglebold"
            android:text="tenApp"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/background_tv_xem_tt_theloai"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:translationZ="10dp"
            android:textStyle="italic"/>
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_xemtt_hinhtruyen"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.viewpager.widget.ViewPager>
</androidx.constraintlayout.widget.ConstraintLayout>